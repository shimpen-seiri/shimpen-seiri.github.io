<footer class="p-article-meta">
	<p class="p-article-meta__date">
		<time datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
			<%= date(post.date, null) %>
		</time>
	</p>
	<% if (post.tags && post.tags.length){ %>
	<ul class="p-article-meta__tag">
		<% count = post.tags.length %>
		<% post.tags.forEach(function(tag, index) { %>
		<li><a href="<%= config.root + tag.path %>"><%= tag.name %></a></li>
		<% }); %>
	</ul>
	<% } %>
</footer>